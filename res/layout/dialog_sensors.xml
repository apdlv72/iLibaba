<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dip"
    android:orientation="vertical"
    android:padding="10dip" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/sensorRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/sensorNo1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/sensorUp1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:minWidth="50dip"
                android:background="@drawable/button"
                android:text=""
                android:visibility="invisible" />

            <TextView
                android:id="@+id/sensorAddr1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="AAAA [00:00:00:00]"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/sensorDown1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:minWidth="50dip"
                android:background="@drawable/button"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="▼" />

            <TextView
                android:id="@+id/tvSensorBound1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/link_48"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </TableRow>

        <TableRow
            android:id="@+id/sensorRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/sensorNo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/sensorUp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dip"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/button"
                android:text="▲" />

            <TextView
                android:id="@+id/sensorAddr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
