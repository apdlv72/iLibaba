<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dip"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sensorNo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/sensorUp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:minWidth="35dip"
                android:text=""
                android:visibility="invisible" />

            <TextView
                android:id="@+id/sensorAddr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00:00:00:00:00:01"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/sensorDown1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                android:layout_marginRight="5dip"
                android:text="v" />

            <!--
                 <Button
                android:id="@+id/sensorUnbind1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                android:background="@android:drawable/ic_menu_delete" />
            -->

            <TextView
                android:id="@+id/tvSensorBound1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/presence_online"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sensorNo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/sensorUp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                android:text="^" />

            <TextView
                android:id="@+id/sensorAddr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00:00:00:00:00:02"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/sensorDown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                android:layout_marginRight="5dip"
                android:text="v" />
            <!--
                 <Button
                android:id="@+id/sensorUnbind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                android:background="@android:drawable/ic_menu_delete" />
            -->

            <TextView
                android:id="@+id/tvSensorBound2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/presence_online"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sensorNo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:text="3"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/sensorUp3"
                android:layout_width="wrap_content"
