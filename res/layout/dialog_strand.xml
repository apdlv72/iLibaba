<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dip"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dip" >

            <LinearLayout
                android:id="@+id/layoutStrandBind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical" 
                >

                <Button
                    android:id="@+id/buttonStrandBind"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_view" />

                <TextView
                    android:id="@+id/titleBind"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="bind" />
            </LinearLayout>

            <TextView
                android:id="@+id/frotectStrandAddr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="00:00:00:00:00:00:00:00"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout
                android:id="@+id/layoutStrandUnbind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:gravity="center"
                >

                <Button
                    android:id="@+id/buttonStrandUnbind"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_menu_delete"
                    />

                <TextView
                    android:id="@+id/titleUnbind"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="unbind" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dip"
                android:text="LO:" />

            <Button
                android:id="@+id/decLo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="-" />

            <TextView
                android:id="@+id/valueLo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="60dip"
                android:text="3.5"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/incLo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="+" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="°C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dip"
                android:text="HI:" />

            <Button
                android:id="@+id/decHi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="-" />

            <TextView
                android:id="@+id/valueHi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="60dip"
                android:text="5.0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/incHi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="+" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="°C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dip"
                android:text="Power:" />

            <Button
                android:id="@+id/decPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="-" />

            <TextView
                android:id="@+id/valuePower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="60dip"
                android:text="96.0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/incPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="+" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dip"
                android:text="Watt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dip" >
            android:gravity="center" >

            <Button
                android:id="@+id/buttonStrandFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dip"
                android:text="Identify" />

            <Button
                android:id="@+id/buttonThresSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dip"
                android:text="Save" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>